@model StudentCourseApp.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Model.Credits</dd>
        <dt class="col-sm-2">Teacher</dt>
        <dd class="col-sm-10">@Model.Teacher?.LastName @Model.Teacher?.FirstName</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
